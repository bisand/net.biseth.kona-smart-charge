{
  "name": {
    "en": "Kona"
  },
  "class": "other",
  "capabilities": [
    "measure_battery",
    "alarm_battery",
    "onoff"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "connectivity": [
    "lan"
  ],
  "pair": [
    {
      "id": "login",
      "template": "login_credentials",
      "options": {
        "logo": "logo.png",
        "usernameLabel": {
          "en": "E-mail address"
        },
        "usernamePlaceholder": {
          "en": "john@doe.com"
        },
        "passwordLabel": {
          "en": "Password"
        },
        "passwordPlaceholder": {
          "en": "Password"
        }
      }
    },
    {
      "id": "pincode",
      "template": "pincode",
      "options": {
        "title": "Enter pincode:",
        "hint": "Enter the device's pincode",
        "type": "number",
        "length": 4
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
